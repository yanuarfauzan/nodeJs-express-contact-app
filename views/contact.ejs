<%- include('layout/header') %>
    <%- include('layout/nav') %>

        <div class="container">
            <div class="row">
                <div class="col">
                    <h2 class="mt-3">Daftar Contact</h2>

                    <a href="/contact/add" class="btn btn-primary">Tambah Data</a>

                    <!-- menampilkan flash message -->
                    <% if (msg.length !==0) { %>
                        <div class="alert alert-success mt-3" role="alert">
                            <%= msg %>
                        </div>
                        <% } %>
                            <table class="table align-middle mb-0 bg-white mt-3">
                                <thead class="bg-light">
                                    <tr>
                                        <th>No</th>
                                        <th>Nama</th>
                                        <th>No HP</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (contacts.length < 1) { %>
                                        <tr>
                                            <td colspan="4">
                                                <div class="alert alert-danger" role="alert">
                                                    Data tidak tersedia</div>
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% contacts.forEach((contact, i)=> {i++ %>

                                                <tr>
                                                    <td>
                                                        <%= i++ %>
                                                    </td>
                                                    <td>
                                                        <%= contact.nama %>
                                                    </td>
                                                    <td>
                                                        <%= contact.noHp %>
                                                    </td>
                                                    <td>
                                                        <a href="/contact/<%= contact.nama %>"
                                                            class="btn btn-info badge rounded-pill">
                                                            <i class="bi bi-info-circle"></i> detail</a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                </tbody>
                            </table>
                </div>
            </div>
        </div>
        <%- include('layout/footer') %>